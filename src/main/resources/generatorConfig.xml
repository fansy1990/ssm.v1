<?xml version="1.0" encoding="UTF-8" ?>

    <!DOCTYPE generatorConfiguration 
      PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
      "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <classPathEntry
        location="D:\.m2\local_repo\mysql\mysql-connector-java\5.1.34\mysql-connector-java-5.1.34.jar" />
    <context id="mysqlTables" targetRuntime="MyBatis3">
    
        <commentGenerator>
            <property name="suppressAllComments" value="true" />
        </commentGenerator>
        
        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
            connectionURL="jdbc:mysql://localhost:3306/ssm"
            userId="fansy" password="fansy">
        </jdbcConnection>
        
        <javaTypeResolver>
            <property name="forceBigDecimals" value="false" />
        </javaTypeResolver>

         <!-- 生成model模型，对应的包，存放位置可以指定具体的路径,如/ProjectName/src，也可以使用MAVEN来自动生成 -->
        <javaModelGenerator targetPackage="demo.model"
            targetProject="ssm.v1/src/main/java">
            <property name="enableSubPackages" value="true" />
            <property name="trimStrings" value="true" />
        </javaModelGenerator>
        
         <!--对应的xml mapper文件  -->
        <sqlMapGenerator targetPackage="demo.model" targetProject="ssm.v1/src/main/java">
            <property name="enableSubPackages" value="true" />
        </sqlMapGenerator>
        
        <!-- 对应的dao接口 -->
        <javaClientGenerator type="XMLMAPPER"
            targetPackage="demo.dao" targetProject="ssm.v1/src/main/java">
            <property name="enableSubPackages" value="true" />
        </javaClientGenerator>


         <!-- 这里是数据库的表名table_user 以及 POJO类的名字User -->
        <table tableName="table_node" domainObjectName="Node"
            enableCountByExample="false" enableSelectByExample="false"
            enableUpdateByExample="false" enableDeleteByExample="false">

        </table>
    </context>

</generatorConfiguration>